{
	"name": "@app/server",
	"scripts": {
		"start": "cd src && npx tsx app",
		"watch": "cd src && npx tsx watch app",
		"reset": "npx prisma db push --force-reset && npx cpr src/app.db bin/app.db -o",
		"build": "npx rollup -c && npx cpr src/prisma/query_engine-windows.dll.node out/prisma.node -o && npx pkg . -o bin/app -C Brotli",
		"build-deb": "npx rollup -c && npx cpr src/prisma/libquery_engine-debian-openssl-3.0.x.so.node out/prisma.node -o && npx pkg . -o bin/app -C Brotli"
	},
	"dependencies": {
		"@app/schema": "link:../schema",
		"@noble/hashes": "^2.0.0",
		"@prisma/client": "^6.15.0",
		"@wavim/http-error": "^1.0.0",
		"compression": "^1.8.1",
		"cookie-parser": "^1.4.7",
		"express": "^5.1.0",
		"express-rate-limit": "^8.0.1",
		"hashids": "^2.3.0",
		"multer": "^2.0.2",
		"node-cron": "^4.2.1",
		"zod": "^4.1.5"
	},
	"devDependencies": {
		"@eslint/js": "^9.34.0",
		"@rollup/plugin-commonjs": "^28.0.6",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^16.0.1",
		"@rollup/plugin-terser": "^0.4.4",
		"@rollup/plugin-typescript": "^12.1.4",
		"@stylistic/eslint-plugin": "^5.2.3",
		"@types/compression": "^1.8.1",
		"@types/cookie-parser": "^1.4.9",
		"@types/express": "^5.0.3",
		"@types/multer": "^2.0.0",
		"@types/node": "^24.3.0",
		"@yao-pkg/pkg": "^6.6.0",
		"cpr": "^3.0.1",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
		"prettier": "^3.6.2",
		"prisma": "^6.15.0",
		"rollup": "^4.49.0",
		"tslib": "^2.8.1",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.41.0"
	},
	"bin": "out/app.js",
	"pkg": {
		"targets": [
			"node22"
		],
		"assets": [
			"public/**",
			"out/*.node"
		],
		"ignore": [
			"!**/server/**",
			"**/package.json",
			"**/node_modules/**",
			"**/node_modules/.pnpm/**"
		]
	},
	"packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}
